---
layout: layouts/base.njk
section: home
---
<div class="home-page">
	<!--<div class="home-page__bg-square"></div>-->

  <div class="hero">
    <div class="hero__col">
      <h1 class="hero__title gradient-text">{{ home.title }}</h1>
      {% if home.subtitle %}
        <h2 class="hero__subtitle">{{ home.subtitle }}</h2>
      {% endif %}
      <span>
        <a class="hero__link" href="https://www.linkedin.com/in/emejiag/">
          <img
          class="hero__icon" src="/static/img/linkedin.svg" 
          width="32px" height="32px" loading="lazy"> 
        </a>
        <a class="hero__link" href="https://github.com/ph81/">
          <img
          class="hero__icon" src="/static/img/github.svg" 
          width="32px" height="32px" loading="lazy"> 
        </a>
        <a class="hero__link" href="https://codepen.io/phearts/">
          <img
          class="hero__icon" src="/static/img/codepen.svg" 
          width="32px" height="32px" loading="lazy"> 
        </a>
         <a class="hero__link" href="https://twitter.com/paperheartsmx">
          <img
          class="hero__icon" src="/static/img/twitter.svg" 
          width="32px" height="32px" loading="lazy"> 
        </a>
      </span>
    </div>
   
    <div class="hero__col">
      <img
        class="hero__image shadow"
        src="{% if home.image %}{{ home.image }}{% else %}https://source.unsplash.com/random/600x600{% endif %}"
        alt="{{ home.image_alt }}"
        width="1000px"
        height="1000px"
        loading="lazy">
    </div>
   
  </div>

  <hr>
  <h2>Projects</h2>
  {% set projectlist = collections.project %}
  {% include "components/projectlist.njk" %}


  <hr>
